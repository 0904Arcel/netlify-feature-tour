  --purple-100: #e2d9f7;
  --purple-200: #d8c7ff;
  --purple-300: #cab9f4;
  --purple-400: #b49df1;
  --purple-500: #9b80ed;
  --purple-600: #775ce7;
  --purple-700: #614aca;
  --purple-800: #382aa4;
  --purple-900: #292142;
  --purple-000: #f5f2fc;


    }

    * {
      box-sizing: border-box;
    }

    html,
    body {

      --heading: #181A1C;
      --text: #353A3E;
      --text-muted: #545A61;
      --primary: #32E6E2;
      --button: #014847;
      --lightBorder: var(--neutral-light-200);
      --light: var(--neutral-light-100);
      --white: var(--neutral-light-000);
      --card-radius: var(--border-radius-3);
      --font-primary: Pacaembu, sans-serif;
      --font-secondary: Mulish, sans-serif;


      color: var(--text);
      font-family: var(--font-secondary);
      font-size: 18px;
      line-height: 1.45;
      margin: 0;
      padding: 0;
    }

    body {
      display: flex;
      flex-direction: column;
      justify-content: center;
      min-height: 100vh;
      padding: 5rem 0 4rem;
    }

    h1, h2, h3 {
      font-family: var(--font-primary);
    }

    main {
      background: var(--light);
      margin-bottom: 2rem;
      margin-top: 3rem;
      padding: 2rem max(5vw, 50vw - 60ch / 2);
      width: 100vw;
      border-style: none;
    }

    .sr-only:not(:focus):not(:active) {
      clip: rect(0 0 0 0);
      clip-path: inset(50%);
      height: 1px;
      overflow: hidden;
      position: absolute;
      white-space: nowrap;
      width: 1px;
    }

  </style>

  <style>
    .container,
    .footer {
      margin: 0 auto;
      text-align: center;
      width: min(90vw, 900px);
    }

    .heading {
      color: var(--heading);
      font-size: 2.5rem;
      margin: 0;
      text-align: center;
    }

    .footer {
      color: var(--text-muted);
      font-size: 0.75rem;
      margin-top: 4rem;
    }

    .footer a {
      color: inherit;
      text-decoration: none;
    }

    .footer a:focus,
    .footer a:hover {
      text-decoration: underline;
    }

    .footer ul {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: center;
      list-style-type: none;
    }

    .footer li {
      margin: 0 1em;
    }

    .heart {
      display: inline-block;
      vertical-align: top;
      width: 1.1rem;
    }

    .heart img {
      display: block;
      width: 100%;
    }
  </style>
</head>
<body>
  <header class="container">
    <h1 class="heading">{title}</h1>

    <p class="description">{description}</p>

    {home !== true && (
      <p>
        <a href="/">&larr; back to home</a>
      </p>
    )}
  </header>

  <slot />

  <footer class="footer">
    <nav>
      <ul>
        <li>
          <a class="footer-link" href="https://www.netlify.com/trust-center/">Trust Center</a>
        </li>
        <li>
          <a class="footer-link" href="https://www.netlify.com/privacy/">Privacy</a>
        </li>
        <li>
          <a class="footer-link" href="https://www.netlify.com/security/">Security</a>
        </li>
        <li>
          <a class="footer-link" href="https://www.netlify.com/gdpr-ccpa/">GDPR/CCPA</a>
        </li>
        <li>
          <a class="footer-link" href="mailto:fraud@netlify.com?subject=Abuse%20report&body=Please%20include%20the%20site%20URL%20and%20reason%20for%20your%20report%2C%20and%20we%20will%20reply%20promptly." target="_blank" rel="noopener noreferrer">Abuse</a>
        </li>
      </ul>
    </nav>
  </footer>

</body>
</html>
