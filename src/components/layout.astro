  --neutral-dark-800: #12181f;
  --neutral-dark-900: #060b10;
  --neutral-dark-000: #ffffff;
  --teal-100: #8efbf7;
  --teal-200: #32e6e2;
  --teal-300: #14d8d4;
  --teal-400: #05bdba;
  --teal-500: #04a29f;
  --teal-600: #02807d;
  --teal-700: #016968;
  --teal-800: #014847;
  --teal-900: #0c2a2a;
  --teal-000: #defffe;
  --blue-100: #cde2ff;
  --blue-200: #b5d2fb;
  --blue-300: #9cbef6;
  --blue-400: #80abfa;
  --blue-500: #5d8df5;
  --blue-600: #316bf4;
  --blue-700: #2e51ed;
  --blue-800: #2036a1;
  --blue-900: #1b205b;
  --blue-000: #edf4ff;
  --gold-100: #f6e0a5;
  --gold-200: #facd6f;
  --gold-300: #fbb13d;
  --gold-400: #f98e21;
  --gold-500: #d5771a;
  --gold-600: #a85d13;
  --gold-700: #8c4c0d;
  --gold-800: #603408;
  --gold-900: #332213;
  --gold-000: #fdf5d8;
  --red-100: #fbd3d0;
  --red-200: #ffbdba;
  --red-300: #ffada9;
  --red-400: #fe8382;
  --red-500: #fe4e5c;
  --red-600: #d62740;
  --red-700: #af2536;
  --red-800: #800a20;
